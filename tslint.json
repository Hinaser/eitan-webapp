{
  "defaultSeverity": "error",
  "extends": ["tslint:latest", "tslint-react"],
  "linterOptions": {
    "exclude": ["**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js"]
  },
  "rules": {
    "max-line-length": [true, {
      "limit": 140,
      "ignore-pattern": "//|^import |^export {(.*?)}"
    }],
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "variable-name": [
      true,
      "ban-keywords",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "import-name": false,
    "ordered-imports": false,
    "interface-name": false,
    "no-empty-interface": false,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false,
    "jsx-no-lambda": false,
    "no-submodule-imports": [false, "excluded-module1", "excluded-module2"],
    "prefer-for-of": false,
    "prefer-conditional-expression": false,
    "one-line": false,
    "whitespace": [false, "check-preblock"],
    "no-trailing-whitespace": [true, "ignore-blank-lines", "ignore-comments", "ignore-jsdoc"],
    "arrow-parens": false,
    "jsx-no-multiline-js": false,
    "no-this-assignment": [true, {"allow-destructuring": true}],
    "member-ordering": [false, {
      "order": ["public-static-method"],
      "alphabetize": false
    }],
    "max-classes-per-file": false,
    "interface-over-type-literal": false,
    "jsx-boolean-value": false,
    "object-literal-key-quotes": [true, "as-needed"]
  },
  "jsRules": {}
}
